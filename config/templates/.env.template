# CostWatch Environment Configuration Template

# ENVIRONMENT SETTINGS
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# SERVICE CONFIGURATION
SERVICE_NAME=service-name
SERVICE_PORT=8000
SERVICE_HOST=0.0.0.0

# DATABASE CONFIGURATION
DATABASE_URL=postgresql://costwatch_user:your_password@localhost:5432/costwatch_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=costwatch_db
DATABASE_USER=costwatch_user
DATABASE_PASSWORD=your_password
DATABASE_SSL_MODE=prefer

# REDIS CONFIGURATION
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AWS CONFIGURATION
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SESSION_TOKEN=
AWS_PROFILE=default

# INTER-SERVICE COMMUNICATION
API_GATEWAY_URL=http://api-gateway:8000
COST_ANALYZER_URL=http://cost-analyzer:8001
RESOURCE_SCANNER_URL=http://resource-scanner:8002
ANALYTICS_ENGINE_URL=http://analytics-engine:8003
ALERT_MANAGER_URL=http://alert-manager:8004

# SECURITY CONFIGURATION
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# MONITORING & LOGGING
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# EMAIL CONFIGURATION (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@costwatch.com

# COST THRESHOLDS & ALERTS
DEFAULT_COST_THRESHOLD=1000.00
HIGH_COST_THRESHOLD=5000.00
CRITICAL_COST_THRESHOLD=10000.00
ALERT_CHECK_INTERVAL=300

# FEATURE FLAGS
ENABLE_ML_PREDICTIONS=true
ENABLE_COST_OPTIMIZATION=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_DETAILED_LOGGING=false